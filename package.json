{
	"name": "fromsrc-monorepo",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "next dev",
		"build": "bun run build:pkg && next build",
		"build:pkg": "cd packages/fromsrc && bun run build",
		"check:types": "bun run build:pkg && bun run check:types:raw",
		"check:types:raw": "tsc --noEmit",
		"check:shake": "bun run build:pkg && bun run check:shake:raw",
		"check:shake:raw": "bun scripts/sizecheck.mjs",
		"check:pack": "bun run build:pkg && bun run check:pack:raw",
		"check:pack:raw": "bun scripts/packcheck.mjs",
		"check:security": "bun audit && bun scripts/securitycheck.mjs",
		"check:ci": "bun run check:security && bun run build:pkg && bun run check:types:raw && bun run check:pack:raw && bun run check:shake:raw && next build",
		"start": "next start",
		"prepare": "husky"
	},
	"dependencies": {
		"@mdx-js/mdx": "^3.1.1",
		"@shikijs/rehype": "^3.22.0",
		"@shikijs/transformers": "^3.22.0",
		"@shikijs/twoslash": "^3.22.0",
		"fromsrc": "workspace:*",
		"gray-matter": "^4.0.3",
		"katex": "^0.16.28",
		"lucide-react": "^0.563.0",
		"next": "16.1.6",
		"next-mdx-remote": "^6.0.0",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"rehype-katex": "^7.0.1",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"shiki": "^3.22.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"autoprefixer": "^10.4.24",
		"husky": "^9.1.7",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5"
	},
	"ignoreScripts": [
		"sharp",
		"unrs-resolver"
	],
	"trustedDependencies": [
		"sharp",
		"unrs-resolver"
	],
	"overrides": {
		"next-mdx-remote": "^6.0.0",
		"@mdx-js/mdx": "^3.1.1"
	}
}
