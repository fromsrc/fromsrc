{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
